</style>*@
<body>

    <h2>A basic HTML table</h2>

    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Photo</th>
            <th>Action</th>
        </tr>
       
      
            @foreach(var item in ViewBag.product)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td><img  src="~/img/@item.Photo" width="60" height="60"/></td>
                    <td>
                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id">Add to Cart</a>
                    </td>
                </tr>
            }
        
    </table>

   

</body>
</html>

